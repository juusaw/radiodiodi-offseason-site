<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>Musiikkikirjasto</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="apple-touch-icon" href="apple-touch-icon.png">
    <link rel="stylesheet" href="static/autogrid.css">
    <link rel="stylesheet" href="static/style.css">
    <link href="https://fonts.googleapis.com/css?family=Asap" rel="stylesheet">
</head>
<body>
    <!--[if lt IE 8]>
        <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
    <![endif]-->
    <div class="header-container">
        <header class="wrapper clearfix">
        </header>
    </div>
    <nav class="navigation-main">
        <ul>
            <li><a href="/">Etusivulle</a></li>
        </ul>
    </nav>
    <div class="main-container">
        <div id="search" class="library-search auto-content section-main section-overview">
            <h2>Musiikkikirjasto</h2>
            <form action="/library#search">
                <input type="search" name="search" class="library-search-input">
                <select name="type" class="library-search-input">
                    <option value="title">Kappale</option>
                    <option value="artist">Artisti</option>
                    <option value="album">Albumi</option>
                </select>
                <button type="submit" class="library-search-input">Hae!</button>
        </div>
        <div class="auto-content section-main">
            <table class="library-table auto-row">
                <% if (data.length > 0) { %>
                    <h3><%= data.length %> hakutulos(ta).</h3>
                    <tr class="library-tr">
                        <th class="library-th auto-col-4">Kappale</th>
                        <th class="library-th auto-col-4">Artisti</th>
                        <th class="library-th auto-col-4">Albumi</th>
                    </tr>
                <% } %>

                <% data.forEach((item) => { %>
                <tr>
                    <td class="library-td auto-col-4"><%= item.title %></td>
                    <td class="library-td auto-col-4"><%= item.artist %></td>
                    <td class="library-td auto-col-4"><%= item.album %></td>
                </tr>
                <% }) %>
            </table>
        </div>
    </div>

    <%- include footer.ejs %>

</body>
</html>
